{
  "compilerOptions": {
    "baseUrl": "./src",
    "sourceMap": true,
    "noImplicitAny": false,
    "removeComments": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "jsx": "react",
    "lib": [
      "dom",
      "es2015",
      "esnext.asynciterable"
    ]
  },
  "exclude": [
    "node_modules",
    "wwwroot",
    "tests"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true,
    "useTranspileModule": true,
    "doTypeCheck": true,
    "forkChecker": true
  }
}
